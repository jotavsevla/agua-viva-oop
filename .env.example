# Ambiente da aplicacao (local|test|staging|prod)
APP_ENV=local

# PostgreSQL Dev (somente local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# Opcional: segredo em arquivo (Docker/K8s secret). Tem precedencia sobre POSTGRES_PASSWORD.
# POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
POSTGRES_DB=agua_viva_oop_dev

# PostgreSQL Test (somente local)
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5435
POSTGRES_TEST_USER=postgres
POSTGRES_TEST_PASSWORD=postgres
POSTGRES_TEST_DB=agua_viva_oop_test

# API Java em container (compose service: api)
API_PORT=8082
API_POSTGRES_HOST=postgres-oop-test
API_POSTGRES_DB=agua_viva_oop_test
API_POSTGRES_USER=postgres
API_SOLVER_URL=http://solver:8080
API_CONFIG_FILE=/app/config/api-config.local.json

# OSRM / Nominatim (opcional)
OSRM_DATASET=sudeste-latest
NOMINATIM_PBF_URL=https://download.geofabrik.de/south-america/brazil/sudeste-latest.osm.pbf
NOMINATIM_PASSWORD=nominatim
# Para preprocessamento em solver/osrm/prepare.sh (opcional)
# OSRM_BBOX=-43.9600,-16.8200,-43.7800,-16.6200
# OSRM_DATASET_NAME=montes-claros-bbox
# OSMIUM_IMAGE=asymmetric/osmium-tool
